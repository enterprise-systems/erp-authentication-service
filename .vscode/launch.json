  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "Default ERP Authentication",
      "request": "launch",
      "mainClass": "com.enterprisesystems.erpauthenticationservice.ErpAuthenticationServiceApplication",
      "projectName": "erp-authentication-service"
    },
    {
      "type": "java",
      "name": "Localhost ERP Authentication",
      "request": "launch",
      "mainClass": "com.enterprisesystems.erpauthenticationservice.ErpAuthenticationServiceApplication",
      "projectName": "erp-authentication-service",
      "args": "--spring.profiles.active=localhost"
    },
    {
      "type": "java",
      "name": "Development ERP Authentication",
      "request": "launch",
      "mainClass": "com.enterprisesystems.erpauthenticationservice.ErpAuthenticationServiceApplication",
      "projectName": "erp-authentication-service",
      "args": "--spring.profiles.active=development"
    },
    {
      "type": "java",
      "name": "Production ERP Authentication",
      "request": "launch",
      "mainClass": "com.enterprisesystems.erpauthenticationservice.ErpAuthenticationServiceApplication",
      "projectName": "erp-authentication-service",
      "args": "--spring.profiles.active=production"
    }
  ]
}